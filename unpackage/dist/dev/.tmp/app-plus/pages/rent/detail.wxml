<view class="rentdetail"><cu-custom vue-id="1" bgColor="uni-custom-header-color" isBack="{{true}}" bind:__l="__l" vue-slots="{{['backText','content']}}"><view slot="backText" data-event-opts="{{[['tap',[['BackPage',['$event']]]]]}}" bindtap="__e">返回</view><view style="line-height:100rpx;" slot="content">发布详情</view></cu-custom><view hidden="{{!(detailInfo&&detailInfo.id)}}" class="content padding-bottom-lg"><block wx:if="{{detailInfo.cotenant_type==1}}"><view class="content-title">预租房(组团)</view></block><block wx:if="{{detailInfo.cotenant_type==2}}"><view class="content-title">合租房(组团)</view></block><view class="label-title">团长信息</view><view class="useringo"><view><text class="label">姓名:</text>{{''+detailInfo.leader}}</view><view><text class="label">学校:</text>{{''+detailInfo.college}}</view><view><text class="label">性别:</text>{{''+(detailInfo.sex==1?'男':'女')}}</view><view><text class="label">租房描述:</text>{{''+detailInfo.cotenant_description}}</view></view><view class="padding-top-sm"><block wx:if="{{detailInfo&&detailInfo.cotenant_list&&detailInfo.cotenant_list.length}}"><view class="label-title">团员信息</view></block><block wx:for="{{detailInfo.cotenant_list}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="group-item-wraper padding-top-sm"><view class="useringo"><view><text class="label">昵称:</text>{{''+item.nick_name}}</view><view><text class="label">学校:</text>{{''+item.college}}</view><view><text class="label">性别:</text>{{''+(item.sex==1?'男':'女')}}</view><view><text class="label">毕业时间:</text>{{''+(item.end_time||'暂无')}}</view><view><text class="label">兴趣爱好:</text>{{''+item.interest}}</view><view style="padding-bottom:10px;"><text class="label">状态:</text><block wx:for="{{statusList}}" wx:for-item="status" wx:for-index="index" wx:key="index"><block wx:if="{{item.status==status.value}}"><view class="{{['cu-tag margin-left-xs','line-'+status.class]}}">{{status.label+''}}</view></block></block></view><block wx:if="{{activeTab&&activeTab==1}}"><view style="text-align:right;"><block wx:if="{{item.status!=10}}"><button data-event-opts="{{[['tap',[['handleStatus',[20,'$0'],[[['detailInfo.cotenant_list','',index,'id']]]]]]]}}" class="cu-btn line-grey margin-right-lg" bindtap="__e">拒绝</button></block><block wx:if="{{item.status!=10}}"><button data-event-opts="{{[['tap',[['handleStatus',[10,'$0'],[[['detailInfo.cotenant_list','',index,'id']]]]]]]}}" class="cu-btn bg-blue margin-right-lg" bindtap="__e">通过</button></block><button data-event-opts="{{[['tap',[['goChat',['$0'],[[['detailInfo.cotenant_list','',index]]]]]]]}}" class="cu-btn line-blue margin-right-lg" bindtap="__e">聊一聊</button></view></block><block wx:if="{{activeTab&&activeTab==2&&item.status!=30}}"><view style="text-align:right;"><block wx:if="{{item.user_id==userInfo.user_id}}"><button data-event-opts="{{[['tap',[['cancelJoin',['$event']]]]]}}" class="cu-btn gray-blue margin-right-lg" bindtap="__e">撤销</button></block></view></block></view></view></block></view><block wx:if="{{detailInfo.cotenant_type&&detailInfo.cotenant_type==2}}"><view><view class="label-title">租房信息</view><view class="rent-info"><view><text class="label">标题:</text><text>{{detailInfo.title}}</text></view><view><text class="label">地区:</text><text>{{detailInfo.province+detailInfo.city+detailInfo.district}}</text></view><view><text class="label">预租房间数:</text><text>{{detailInfo.cotenant_count+" 间"}}</text></view><view><text class="label">预租房描述:</text><text>{{detailInfo.chamber_description}}</text></view></view></view></block><block wx:if="{{activeTab&&activeTab==1}}"><button data-event-opts="{{[['tap',[['doDismiss',['$event']]]]]}}" class="cu-btn block line-blue margin-tb-sm lg" style="margin-top:60rpx;" bindtap="__e">解散该团</button></block></view><block wx:if="{{modalName=='DialogModal3'}}"><view class="{{['cu-modal',modalName=='DialogModal3'?'show':'']}}"><view class="cu-dialog"><view class="cu-bar bg-white justify-end"><view class="content padding-top-sm">解散合租团</view><view data-event-opts="{{[['tap',[['hideModal',['$event']]]]]}}" class="action" bindtap="__e"><text class="cuIcon-close text-red"></text></view></view><view class="cu-form-group margin-top padding-xl margin-bottom" style="text-align:left;"><textarea maxlength="-1" placeholder="请输入解散理由,请确保已与其他成员沟通同意解散" data-event-opts="{{[['input',[['dismissTextareaAInput',['$event']]]]]}}" bindinput="__e"></textarea></view><view class="cu-bar bg-white justify-end"><view class="action"><button data-event-opts="{{[['tap',[['hideModal',['$event']]]]]}}" class="cu-btn line-blue text-green" bindtap="__e">取消</button><button class="cu-btn bg-blue margin-left" disabled="{{!dismissContent}}" data-event-opts="{{[['tap',[['doDismissAjax',['$event']]]]]}}" bindtap="__e">确定</button></view></view></view></view></block></view>